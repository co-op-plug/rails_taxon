<div class="inline fields">
  <%= f.label "#{outer}_ancestors" %>
  <% if f.object.send("#{outer}_id") %>
    <% f.object.send("#{outer}").ancestors.reverse_each do |node| %>
      <%= render partial: 'nodes/outer_options', locals: { f: f, node: node } %>
    <% end %>
  <% else %>
    <%= render partial: 'nodes/outer_options', locals: { f: f, node: f.object.send("#{outer}").class.root } %>
  <% end %>
</div>