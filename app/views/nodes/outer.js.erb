<% form_object = default_form_object(@new_node) %>
<% if @node.children.present? %>
var template = '<%= j(render partial: 'outer_options', locals: { f: form_object, node: @node.children.first, outer: params[:node_type].underscore }) %>'
if ($('#<%= params[:node_type].underscore %>_wrapper_<%= @node.depth %>').next().length > 0) {
  $('#<%= params[:node_type].underscore %>_wrapper_<%= @node.depth %>').next().replaceWith(template);
} else {
  $('#<%= params[:node_type].underscore %>_wrapper_<%= @node.depth %>').after(template);
}
$("#<%= params[:outer_type].underscore %>_<%= params[:node_type].underscore %>_ancestors\\(<%= @node.depth + 1 %>i\\)").dropdown({
  placeholder: false,
  onChange: function (value, text, $selectedItem) {
    var search_path = '/nodes/outer';
    var search_url = new URL(window.location.origin + search_path);
    search_url.searchParams.set('node_id', value);
    search_url.searchParams.set('node_type', this.dataset['type'])
    search_url.searchParams.set('outer_type', this.dataset['outer'])

    fetch_xhr_script(search_url);
  }
});
<% else %>
if ($('#<%= params[:node_type].underscore %>_wrapper_<%= @node.depth %>').next().length > 0) {
  $('#<%= params[:node_type].underscore %>_wrapper_<%= @node.depth %>').nextAll().replaceWith('');
}
<% end %>